<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <com.eezy.kidfacts.view.DragablePaneView
        android:id="@+id/dragable_pane_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.eezy.kidfacts.view.PageTitleView
        android:id="@+id/page_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/btn_help"
        android:layout_width="@dimen/btn_size_small"
        android:layout_height="@dimen/btn_size_small"
        android:src="@drawable/btn_help"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginBottom="@dimen/margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>

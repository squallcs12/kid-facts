<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/frame_player"
        app:layout_widthPercent="78%"
        app:layout_heightPercent="84%"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/frame_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/high_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.percent.PercentRelativeLayout>
    
    <com.eezy.kidfacts.view.PageTitleView
        android:id="@+id/page_title_view"
        app:page_title="@string/congrat"
        app:page_subtitle="Some content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

</android.support.percent.PercentRelativeLayout>
